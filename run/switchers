Impulse = 0;  //Импульсный старт потока (+)
RampLin = 1;  //Разгон потока по линейному закону (+)
RampCos = 2;  //Разгон потока по закону косинуса (+)

panelsRectilinear = 0;   //Прямолинейные панели (+)
panelsCurvilinear = 1;   //Криволинейные панели (*)

boundaryConstantLayerAverage = 0;   //Слой постоянной интенсивности, гу - в среднем на панелях (касательная) (+)
boundaryLinearLayerAverage = 1;     //Слой линейной интенсивности, гу - в среднем на панелях (касательная) (*)
boundaryQuadraticLayerAverage = 2;  //Слой квадратичной интенсивности, гу - в среднем на панелях (касательная) (-)
boundaryMDV  = 10;          //Генерация вихрей, граничное условие - коллокации в точках (МДВ) (-)
boundaryVortColl  = 11;     //Генерация вихрей, граничное условие - коллокации в точках (касательная) (-)

text = 0;				//сохранение vtk-файлов в текстовом формате
binary = 1;				//сохранение vtk-файлов в бинарном формате

linearSystemGauss = 0;      //Решение системы методом Гаусса (+)
linearSystemGMRES = 1;      //Решение системы методом GMRES (*)
linearSystemBiCGStab = 2;   //Решение системы методом BiCGStab (*)
linearSystemFMM = 3;        //Решение системы быстрым методом мультиполей (-)

velocityBiotSavart = 0;   //Вычисление скоростей напрямую по закону Био --- Савара (+)
velocityBarnesHut  = 1;   //Вычисление скоростей через построение дерева по методу Барнса --- Хата (*)
velocityFourier    = 2;   //Вычисление скоростей через решение вспом. задачи для функции тока через преобразование Фурье (-)
velocityFMM        = 3;   //Вычисление скоростей быстрым методом мультиполей (-)

mechanicsRigidImmovable = 0;    //Жесткое неподвижное недеформируемое тело
mechanicsRigidGivenLaw = 1;     //Жесткое недеформируемое тело, движущееся по заданному закону вдоль оси x
mechanicsRigidOscillPart = 2;   //Жесткое недеформируемое тело с упругой связью (шарик на пружинке с демпфером), метод расщепления
mechanicsRigidRotatePart = 3;   //Жесткое недеформируемое тело (ротор), совершающее крутильные колебания, метод расщепления
